<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{# if noMessage}} hidden {{/if}}>
    {{ succesMsg}}
        </div>
    </div>
</div>

{{# each products }}

<div class="row">
    {{# each this}}
    <div class="card col-sm-4" style="width: 18rem;">
        <img src="{{ this.imagePath }}" class="card-img-top img-fluid"
            alt="...">
        <div class="card-body">
            <h5 class="card-title">{{ this.title }}</h5>
            <p class="card-text description">{{ this.description }}</p>
            <div class="clearfix">
                <div class="price float-left">$ {{ this.price }}</div>
                <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right">Add to Shopping Cart!</a>
            </div>
        </div>
    </div>

    {{/each}}
</div>

{{/each}}